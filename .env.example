# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/uniflow_notifications
# Alternative: individual MongoDB settings
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=uniflow_notifications
MONGODB_AUTH_SOURCE=admin

# Azure CosmosDB (for production)
# MONGODB_URI=mongodb://cosmos-account.mongo.cosmos.azure.com:10255/uniflow_notifications?ssl=true&replicaSet=globaldb&maxIdleTimeMS=120000&appName=@cosmos-account@

# Azure Services
AZURE_COMMUNICATION_CONNECTION_STRING=your_communication_connection_string
AZURE_COMMUNICATION_SENDER_ADDRESS=DoNotReply@059ab36d-eeed-40a9-a8ee-c5779bb03e64.azurecomm.net
AZURE_NOTIFICATION_HUB_CONNECTION_STRING=your_notification_hub_connection_string
AZURE_NOTIFICATION_HUB_NAME=your_notification_hub_name

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=https://uniflow.fabian-vargas.com

# Feature Flags
EMAIL_ENABLED=true
PUSH_ENABLED=true

# Security - Certificate Verification
# Comma-separated list of allowed certificate thumbprints (SHA-256 fingerprints in hex)
# Example: ALLOWED_CERTIFICATE_THUMBPRINTS=abc123def456,789ghi012jkl
# Leave empty to disable certificate verification
ALLOWED_CERTIFICATE_THUMBPRINTS=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600
REDIS_MAX_ITEMS=100

# User Service Configuration
ACADEMIC_SERVICE_URL=http://localhost:8000/academic/v1
USER_CACHE_TTL=3600
